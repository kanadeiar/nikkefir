@page "/images2020"
@inject ImagesData ImagesData

<PageTitle>Рисунки</PageTitle>

<div class="border-1 bg-light shadow rounded-1 p-2">

    <h1>Все рисунки за 2020 год</h1>

    <div class="m-1">
        <NavLink class="btn btn-info me-1 p-3" href="images2019">
            <i class="fas fa-arrow-left"></i>
            Предидущие
        </NavLink>
        <NavLink class="btn btn-info me-1 p-3" href="images2021">
            Следующие
            <i class="fas fa-arrow-right"></i>
        </NavLink>
    </div>

    <div class="row">
        @foreach (var item in Images)
        {
            <div class="col-lg-6">
                <div class="card mb-4">
                    <h5 class="card-header">@item.Name</h5>
                    <NavLink href="@($"imageshow/{item.Id}")">
                        <img src="@(item.Path)" class="card-img-top" alt="@(item.Name)" />
                    </NavLink>
                    <p class="card-body">Дата: @(item.Date.ToString("dd.MM.yyyy"))</p>
                </div>
            </div>
        }
    </div>

    <div class="m-1">
        <NavLink class="btn btn-info me-1 p-3" href="images2019">
            <i class="fas fa-arrow-left"></i>
            Предидущие
        </NavLink>
        <NavLink class="btn btn-info me-1 p-3" href="images2021">
            Следующие
            <i class="fas fa-arrow-right"></i>
        </NavLink>
    </div>
    <div class="row m-1">
        <NavLink class="btn btn-success me-1 p-3" href="order">
            <i class="fas fa-cart-shopping"></i>
            Заказать рисунок
        </NavLink>
    </div>
</div>

@code {
    public IEnumerable<Image> Images { get; set; } = Enumerable.Empty<Image>();
    protected override void OnParametersSet()
    {
        Images = ImagesData.GetImages()
        .Where(x => x.Date.Year == 2020)
        .OrderByDescending(x => x.Date);
    }
}